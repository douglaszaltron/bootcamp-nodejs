{% extends "_layouts/default.njk" %}

{% block body %}

  <div class="content">
    <strong>Agendamento hor√°rio</strong>
    <div class="provider">
      <div>
        <img src="/files/{{ provider.avatar}}" alt="Avatar">
        <strong>{{provider.name}}</strong>
      </div>
    </div>
    <form action="/app/appointments/new/{{ provider.id}}" method="POST">
      <input type="text" class="flatpickr" placeholder="Escolha uma data">

      <div id="hours"></div>

      <button type="submit">Agendar</button>

    </form>
  </div>

  <script type="text/javascript">
    flatpickr('.flatpickr', {
      minDate: new Date(),
      dateFormat: 'd/m/Y',
      locale: 'pt',
      onChange: function (date) {
        fetch(`/app/available/{{ provider.id }}?date=${date[0].getTime()}`).then(function (response) {
          response
            .text()
            .then(function (html) {
              document
                .getElementById('hours')
                .innerHTML = html
            })
        })
      }
    })
  </script>
{% endblock %}
